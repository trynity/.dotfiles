[user]
	name = <%= CONFIG['git']['name'] %>
	email = <%= CONFIG['git']['email'] %>

[alias]
	# Two-character shortcuts
	ci = commit
	cl = clone
	st = status
	co = checkout
	sm = submodule
	cp = cherry-pick
	dt = difftool
	
	# Plural shortcuts
	remotes = remote -v
	branches = branch -a
	tags = tag -l
	submodules = submodule status
	
	# Helpful shortcuts
	unstage = reset HEAD --
	track = checkout --track
	upstream = remote add upstream
	discard = checkout --

[hub]
	protocol = ssh

[color]
	diff = auto
	status = auto
	branch = auto
	ui = true

[advice]
	pushNonFastForward = false

[branch]
	autosetupmerge = true

[rerere]
	enabled = true

[difftool]
	prompt = false

[push]
	default = matching

[mergetool]
  prompt = false

# Platform Specific Settings

<% if OS.mac? %>
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[diff]
  renames = copies
  mnemonicprefix = true
  tool = Kaleidoscope
[merge]
  tool = Kaleidoscope
[core]
	editor = "subl -nw"
<% end %>

[core]
  preloadindex = true
  fsyncobjectfiles = true
