source 'https://rubygems.org'

group :essential do
  gem 'rake'
  gem 'git'
  gem 'os'
  gem 'ruby-keychain', :require => 'keychain'
end

group :templates do
    gem 'tilt'      # Template Engine Interface
    gem 'erubis'    # ERB
    gem 'haml'      # HAML
    gem 'kramdown'  # Markdown
    gem 'liquid'    # Liquid
    gem 'rdoc'      # RDoc
    gem 'redcarpet'
    gem 'RedCloth'
end

group :homebrew do
  gem 'brewdler'
end

group :tmux do
  gem 'teamocil'
end

group :bin do
    gem 'opencnam'
end
